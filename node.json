{
  "build-essential": {},
  "users": [{
    "username": "deploy",
    "password": "supersecret", // EDIT THIS
    "gid": 4000,
    "uid": 4000
  }],

  "mongodb": {
    "password": {
      "postgres": "supersecret" // EDIT THIS
    }
  },

  "groups": [{
    "name": "deploy",
    "gid": 4000
  }],

  "nginx": {
    "version": "1.2.5",
    "user": "deploy",
    "init_style": "init",
    "modules": [
      "nginx::http_stub_status_module",
      "nginx::http_ssl_module",
      "nginx::http_gzip_static_module"
    ],
    "passenger": {
      "version": "3.0.18",
      "gem_binary": "/usr/bin/gem"
    },
    "configure_flags": [
      "--add-module=/var/lib/gems/1.8/gems/passenger-3.0.18/ext/nginx"
    ],
    "gzip_types": [
      "text/plain",
      "text/html",
      "text/css",
      "text/xml",
      "text/javascript",
      "application/json",
      "application/x-javascript",
      "application/xml",
      "application/xml+rss"
    ]
  },

  "authorization": {
    "sudo": {
      "users": ["deploy"],
      "passwordless": true
    }
  },

  "run_list": [
    "recipe[apt::default]",
    "recipe[build-essential::default]",
    "recipe[curl]",
    "recipe[users]",
    "recipe[ruby_install]",
    "recipe[nginx::commons]",
    "recipe[nginx::passenger]",
    "recipe[nginx::source]",
    "recipe[mongodb::default]",
    "recipe[nodejs]"
  ]
}
