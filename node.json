{
  "build-essential": {},
  "users": [{
    "username": "deploy",
    "password": "supersecret", // EDIT THIS
    "gid": 4000,
    "uid": 4000
  }],

  "mongodb": {
    "password": {
      "postgres": "supersecret" // EDIT THIS
    }
  },

  "groups": [{
    "name": "deploy",
    "gid": 4000
  }],

  "rvm": {
    "rubies": ["1.8.7-p374"],
    "default_ruby": "1.8.7-p374",
    "vagrant": { "system_chef_solo" : "/opt/ruby/bin/chef-solo" },
    "gems": {
      "1.8.7": [
        {"name": "bundler"},
        {"name": "rake"},
        {"name": "rails",
         "version": "3.2.19"}
      ]
    }
  },

  "nginx": {
    "version": "1.2.5",
    "user": "deploy",
    "init_style": "init",
    "modules": [
      "nginx::http_stub_status_module",
      "nginx::http_ssl_module",
      "nginx::http_gzip_static_module"
    ],
    "passenger": {
      "version": "3.0.18",
      "gem_binary": "/usr/local/rvm/wrappers/ruby-1.8.7-p374/gem"
    },
    "configure_flags": [
      "--add-module=/usr/local/rvm/gems/ruby-1.8.7-p374/gems/passenger-3.0.18/ext/nginx"
    ],
    "gzip_types": [
      "text/plain",
      "text/html",
      "text/css",
      "text/xml",
      "text/javascript",
      "application/json",
      "application/x-javascript",
      "application/xml",
      "application/xml+rss"
    ]
  },

  "authorization": {
    "sudo": {
      "users": ["deploy"],
      "passwordless": true
    }
  },

  "run_list": [
    "recipe[apt::default]",
    "recipe[build-essential::default]",
    "recipe[curl]",
    "recipe[users]",
    "recipe[rvm::vagrant]",
    "recipe[rvm::system]",
    "recipe[nginx::commons]",
    "recipe[nginx::passenger]",
    "recipe[nginx::source]",
    "recipe[mongodb::default]",
    "recipe[nodejs]"
  ]
}
